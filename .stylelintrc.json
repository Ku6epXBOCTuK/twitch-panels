{
  "extends": ["stylelint-config-recommended", "stylelint-config-html/svelte"],
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ]
  },
  "ignoreFiles": [
    ".github/**/*",
    ".svelte-kit/**/*",
    "build/**/*",
    "coverage/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "reference/**/*"
  ]
}
